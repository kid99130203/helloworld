page{
	background-color:rgba(236, 234, 218, 0.87); 
	background-color: white;
}
.MyMap{
	width: 100%;
}

.textInput{
	display: flex;
	flex-direction: row;
	z-index: 100;
	height: 20%;
}

.textInput input{
	width: 375rpx;
	border: 1px solid grey;
}

.myForm{
	width: 750rpx;
	width: 50%;
	display: flex;
	flex-direction: row;
}
form input{
	width: 750rpx;
	height: 70rpx;
	font-size: 20px;
	text-align: center;
}

.myForm button{
	width: 375rpx;
}
.line{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	justify-content: left;
	margin-left: 7%;
}

.line view{
	width: 45%;
	border: 1px solid rgb(197, 202, 202);
	text-align: center;
	font-size: 40rpx;
	overflow-wrap: break-word
}

.choose{
	display: flex;
	flex-direction: row;
}

.choose button{
	width: 375rpx;
}





.page-section {
  position: absolute;
	bottom:-80%;
}

movable-area {
	height: 100% !important;
	border-radius: 30px;

	pointer-events: none;
}


movable-view {
  background-color: #fefefe;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  display: flex;
	justify-content: center;
	

	pointer-events: auto;
	
}

.tabBar{
	width: 100px;
	height: 20px;
	border-radius: 10px;
	background-color: rgb(184, 173, 173);
	margin-top: 10px;

}

.detail{
	height: 45%;
	margin-top: 3%;
}



.btn{
  position: fixed;
  left: 0%;
  bottom: 0;
  /*margin-left: -92px;*/
  z-index: 200;
}

.fankui{
	position: fixed;
  right: 5%;
  top: 10%;
  /*margin-left: -92px;*/
	z-index: 200;
	font-size: 14px;
	width: 14px;
	height: 34px;
	background-color: white;
	border: 1px solid lightgray;
	border-radius: 5px;
}